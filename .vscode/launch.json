 "version": "0.2.0",
 "configurations": [

  {
    "name": "Launch Unit Tests",
    "type": "node",
    "request": "launch",
    "program": "${workspaceRoot}/spec/runner.js",
    "stopOnEntry": false,
    "args": [],
    "cwd": "${workspaceRoot}/",
    "runtimeExecutable": null,
    "runtimeArgs": ["--nolazy"],
    "env": {
        "NODE_ENV": "development"
    },
    "sourceMaps": true,
    "outFiles": [
     "${workspaceRoot}/dist/**/*.js",
     "${workspaceRoot}/dist/**/*.js.map"
    ]
  },
  {
   "type": "node",
   "request": "launch",
   "name": "Launch Program",
   "program": "${workspaceRoot}/dist/src/lds.js",
   "outFiles": ["${workspaceRoot}/dist/src/**/*.js"],
   "sourceMaps": true
  },
  {
   "type": "node",
   "request": "attach",
   "name": "Attach to Process",
   "address": "localhost",
   "port": 5858,
   "outFiles": []
  }
 ]
}